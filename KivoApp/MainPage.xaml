<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KivoApp.MainPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Kivo">

    <Grid Padding="20">
        <!-- Conteúdo principal com ScrollView -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20">

                <!-- Título -->
                <Label Text="KivoApp" 
                       Style="{StaticResource Headline}"
                       TextColor="White"
                       HorizontalOptions="Center" 
                       Margin="0,10,0,20" />

                <!-- Card de saldo -->
                <Border Style="{StaticResource CardStyle}" Padding="20" StrokeShape="RoundRectangle 15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Saldo disponível" 
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                        <Label Text="R$ 1.250,00" 
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Primary}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Entradas e saídas -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">

                    <!-- Entradas -->
                    <Border Style="{StaticResource CardStyle}" Padding="15" StrokeShape="RoundRectangle 12"
                            Grid.Column="0">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Entradas" FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                            <Label Text="R$ 3.500,00" FontSize="20" FontAttributes="Bold"
                                   TextColor="Green"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Saídas -->
                    <Border Style="{StaticResource CardStyle}" Padding="15" StrokeShape="RoundRectangle 12"
                            Grid.Column="1">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Saídas" FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                            <Label Text="R$ 2.250,00" FontSize="20" FontAttributes="Bold"
                                   TextColor="Red"/>
                        </VerticalStackLayout>
                    </Border>

                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Botão de Nova Transação e título fixo na parte de baixo -->
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="End"
                             HorizontalOptions="Center"
                             Spacing="10">
            <Label Text="Nova Transação"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Button Text="+"
                    FontSize="28"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    Clicked="OnNovaTransacaoClicked"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
