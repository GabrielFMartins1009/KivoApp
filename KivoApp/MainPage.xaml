<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KivoApp.MainPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Kivo">



    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Label Text="KivoApp" 
                   Style="{StaticResource Headline}" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,20" />

            <!-- Card de saldo -->
            <Border Style="{StaticResource CardStyle}" Padding="20" StrokeShape="RoundRectangle 15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Saldo disponível" 
                           FontSize="16"
                           TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                    <Label Text="R$ 1.250,00" 
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Entradas e saídas -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="15">

                <!-- Entradas -->
                <Border Style="{StaticResource CardStyle}" Padding="15" StrokeShape="RoundRectangle 12"
                        Grid.Column="0">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Entradas" FontSize="14" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                        <Label Text="R$ 3.500,00" FontSize="20" FontAttributes="Bold"
                               TextColor="Green"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Saídas -->
                <Border Style="{StaticResource CardStyle}" Padding="15" StrokeShape="RoundRectangle 12"
                        Grid.Column="1">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Saídas" FontSize="14" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}"/>
                        <Label Text="R$ 2.250,00" FontSize="20" FontAttributes="Bold"
                               TextColor="Red"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
