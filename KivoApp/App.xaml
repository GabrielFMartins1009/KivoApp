<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:KivoApp.Converters"
             x:Class="KivoApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- registrar os conversores AQUI -->
            <converters:TipoToColorConverter x:Key="TipoToColorConverter" />
            <converters:PercentToFractionConverter x:Key="PercentToFractionConverter" />
            <converters:PorcentagemToProgressConverter x:Key="PorcentagemToProgressConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
